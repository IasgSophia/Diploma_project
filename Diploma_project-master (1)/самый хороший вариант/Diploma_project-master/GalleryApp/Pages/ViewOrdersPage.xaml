<Page x:Class="GalleryApp.Pages.ViewOrdersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GalleryApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="просмотр заказов">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>

        <Label Content="Список заказов"
               Grid.Row="0"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               FontSize="20"
               FontWeight="Bold" />

        <ScrollViewer Grid.Row="1" Margin="10" VerticalScrollBarVisibility="Auto">
            <ListView x:Name="dataGridOrders"
                      MinWidth="800"
                      ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="Gray" BorderThickness="1" Margin="5" Padding="10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="3*" />
                                    <ColumnDefinition Width="2.5*" />
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding LampModel, StringFormat='Модель лампы: {0}'}" />
                                    <TextBlock Text="{Binding ShippingTypeName, StringFormat='Тип доставки: {0}'}" />
                                </StackPanel>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Adress, StringFormat='Адрес: {0}'}" TextWrapping="Wrap" />
                                    <TextBlock Text="{Binding Comment, StringFormat='Комментарий: {0}'}" TextWrapping="Wrap" />
                                </StackPanel>

                                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                                    <Button Content="Оформить документ"
                                            Padding="5" Margin="5"
                                            Click="GenerateDocumentButton_Click"
                                            CommandParameter="{Binding OrderEntity}" />

                                    <Button Content="Удалить"
                                            Padding="5" Margin="5"
                                            Background="IndianRed" Foreground="White"
                                            Click="DeleteOrderButton_Click"
                                            CommandParameter="{Binding OrderEntity}" />
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="10,0">
            <Label x:Name="CountLabel"
                   Content="Всего заказов: 0"
                   VerticalAlignment="Center"
                   FontWeight="Bold" />

            <Button Margin="10,0,0,0"
                    Content="Назад"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left"
                    Click="BackButton_Click"/>

            <Button Content="Оформить все документы" 
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right"
                    Click="GenerateAllInvoicesButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
