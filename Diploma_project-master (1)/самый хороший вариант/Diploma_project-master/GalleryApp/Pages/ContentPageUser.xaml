<Page x:Class="GalleryApp.Pages.ContentPageUser"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GalleryApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="1350"
      Title="Товары">
        <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label x:Name="CountOfLabel"
               Grid.Column="0"
               HorizontalAlignment="Left"
               VerticalAlignment="Center"/>

            <Label x:Name="FIOLabel"
               Grid.Column="1"
               HorizontalAlignment="Right"
               VerticalAlignment="Center"/>
        </Grid>

        <ScrollViewer Grid.Row="1" Margin="10,5" VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Auto">
            <WrapPanel Orientation="Horizontal"
           ItemHeight="70"
           MinWidth="1350"
           VerticalAlignment="Top">

                <TextBox x:Name="SearchTextBox"
                     Width="150"
                     Margin="0,0,10,10"
                     VerticalAlignment="Center"
                     TextChanged="SearchTextBox_TextChanged"/>

                <RadioButton x:Name="SortUpRadioButton"
                         Content="Цена ↑"
                         Margin="0,0,10,10"
                         VerticalAlignment="Center"
                         Checked="SortUpRadioButton_Checked"/>

                <RadioButton x:Name="SortDownRadioButton"
                         Content="Цена ↓"
                         Margin="0,0,10,10"
                         VerticalAlignment="Center"
                         Checked="SortDownRadioButton_Checked"/>

                <ComboBox x:Name="LampTypeComboBox"
  Width="150"
  Margin="0,0,10,10" DisplayMemberPath="Name"/>


                <ComboBox x:Name="MountingTypeComboBox"
Width="150"
  Margin="0,0,10,10" DisplayMemberPath="Name"/>

                <ComboBox x:Name="ManufacturerComboBox"
Width="150"
  Margin="0,0,10,10" DisplayMemberPath="Name"/>

                <CheckBox x:Name="UVCheckBox"
                      Content="Защита УФ"
                      Margin="0,0,10,10"
                      Checked="UVCheckBox_Checked"
                      Unchecked="UVCheckBox_Unchecked"/>

                <CheckBox x:Name="IRCheckBox"
                      Content="Защита ИК"
                      Margin="0,0,10,10"
                      Checked="IRCheckBox_Checked"
                      Unchecked="IRCheckBox_Unchecked"/>

                <CheckBox x:Name="DimmableCheckBox"
                      Content="Диммируемый"
                      Margin="0,0,10,10"
                      Checked="DimmableCheckBox_Checked"
                      Unchecked="DimmableCheckBox_Unchecked"/>
            </WrapPanel>
        </ScrollViewer>

        <ScrollViewer Grid.Row="2" Margin="10" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="ProductListView" ItemsSource="{Binding Products}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="Gray" BorderThickness="1" Margin="5" Padding="10" Width="400" Background="#FAFAFA">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="130"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Image Grid.Column="0"
                                   Width="130" Height="130"
                                   Margin="0,0,10,0"
                                   Stretch="UniformToFill">
                                        <Image.Source>
                                            <Binding Path="ProductPhoto">
                                                <Binding.TargetNullValue>
                                                    <BitmapImage UriSource="/Resources/smallcrow.png"/>
                                                </Binding.TargetNullValue>
                                            </Binding>
                                        </Image.Source>
                                    </Image>

                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock FontSize="12" Text="{Binding ModelName, StringFormat='Название: {0}'}" />
                                        <TextBlock FontSize="12" Text="{Binding Manufacturer.Name, StringFormat='Производитель: {0}'}" />
                                        <TextBlock FontSize="12" Text="{Binding Price, StringFormat='Цена: {0} ₽'}" />
                                    </StackPanel>
                                </Grid>

                                <Grid Grid.Row="1" Margin="0,10,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock FontSize="12" Text="{Binding LampType.Name, StringFormat='Тип лампы: {0}'}"/>
                                        <TextBlock FontSize="12" Text="{Binding PowerWatts, StringFormat='Мощность: {0} Вт'}"/>
                                        <TextBlock FontSize="12" Text="{Binding ColorTemperature, StringFormat='Темп: {0}K'}"/>
                                        <TextBlock FontSize="12" Text="{Binding CRI, StringFormat='CRI: {0}'}"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1">
                                        <TextBlock FontSize="12" Text="{Binding LuminousFlux, StringFormat='Поток: {0} лм'}"/>
                                        <TextBlock FontSize="12" Text="{Binding BeamAngle, StringFormat='Угол: {0}°'}"/>
                                        <TextBlock FontSize="12" Text="{Binding HasUVProtection, StringFormat='УФ: {0}'}"/>
                                        <TextBlock FontSize="12" Text="{Binding HasIRProtection, StringFormat='ИК: {0}'}"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2">
                                        <TextBlock FontSize="12" Text="{Binding Dimmable, StringFormat='Диммируемый: {0}'}"/>
                                        <TextBlock FontSize="12" Text="{Binding MountingType.Name, StringFormat='Крепление: {0}'}"/>
                                        <TextBlock FontSize="12" Text="{Binding Voltage, StringFormat='Напряжение: {0} В'}"/>
                                        <TextBlock FontSize="12" Text="{Binding StockQuantity, StringFormat='Остаток: {0}'}"/>
                                    </StackPanel>
                                </Grid>

                                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                                    <Button 
                                            Content="Добавить в корзину"
                                            x:Name="AddToCartButton"
                                            Click="AddToCartButton_Click"
                                            HorizontalAlignment="left"/>            
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>





        <Grid Grid.Row="3" Margin="10,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="BackButton"
                Content="Назад"
                Grid.Column="0"
                HorizontalAlignment="Left"
                Margin="0,0,10,0"
                Click="BackButton_Click"/>

            <Button Grid.Row="3"
        HorizontalAlignment="Right"
        Content="Перейти в корзину"
        x:Name="AddButton"
        Click="AddButton_Click"/>
        </Grid>
    </Grid>
</Page>