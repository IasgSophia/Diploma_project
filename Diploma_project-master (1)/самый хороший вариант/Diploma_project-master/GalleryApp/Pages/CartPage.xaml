<Page x:Class="GalleryApp.Pages.CartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GalleryApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Корзина">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <ListView x:Name="CartListView" Margin="0,0,0,10" ItemsSource="{Binding CartItems}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>

                            <Image Grid.Column="0"
                                   Margin="10"
                                   Width="130"
                                   Height="100"
                                   Stretch="UniformToFill">
                                <Image.Source>
                                    <Binding Path="ProductPhoto">
                                        <Binding.TargetNullValue>
                                            <BitmapImage UriSource="/Resources/smallcrow.png"/>
                                        </Binding.TargetNullValue>
                                    </Binding>
                                </Image.Source>
                            </Image>

                            <StackPanel Grid.Column="1"
                                        VerticalAlignment="Center"
                                        Margin="10,0">
                                <TextBlock Text="{Binding ModelName, StringFormat='Название: {0}'}"/>
                                <TextBlock Text="{Binding Manufacturer.Name, StringFormat='Производитель: {0}'}"/>
                                <TextBlock Text="{Binding Price, StringFormat='Цена: {0} ₽'}"/>
                            </StackPanel>

                            <Button Grid.Column="2"
                                    Content="Удалить"
                                    Width="80"
                                    Margin="10"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Click="RemoveButton_Click"
                                    CommandParameter="{Binding}"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollViewer>

        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,5">
            <Label x:Name="UserInfoLabel" Content="ФИО пользователя" FontSize="16" Visibility="Hidden"/>
            <Label Content="Комментарий" />
            <TextBox x:Name="CommentTextBox" Margin="0,5" TextWrapping="Wrap"/>
            <Label Content="Адрес доставки" />
            <TextBox x:Name="AddressTextBox" Margin="0,5"/>
            <Label Content="Тип доставки" />
            <ComboBox x:Name="ShippingTypeComboBox" Margin="0,5"
                      DisplayMemberPath="Name" SelectedValuePath="Id"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,0">
            <Button Content="Назад" Click="BackButton_Click" HorizontalAlignment="Left"/>
            <Button Content="Оформить заказ" Click="SubmitOrderButton_Click" HorizontalAlignment="Right" Margin="10,0,0,0"/>
        </StackPanel>
    </Grid>
</Page>
