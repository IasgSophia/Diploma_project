<Page x:Class="GalleryApp.Pages.AddEditAccountsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GalleryApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Добавление аккаунтов">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="10">
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="Имя:" VerticalAlignment="Center"/>
                        <TextBox x:Name="FirstNameTextBox" Grid.Column="1" Width="150"/>
                    </Grid>

                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="Фамилия:" VerticalAlignment="Center"/>
                        <TextBox x:Name="LastNameTextBox" Grid.Column="1" Width="150"/>
                    </Grid>

                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="Телефон:" VerticalAlignment="Center"/>
                        <TextBox x:Name="PhoneTextBox" Grid.Column="1" Width="150"/>
                    </Grid>

                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="Пароль:" VerticalAlignment="Center"/>
                        <PasswordBox x:Name="PasswordBox" Grid.Column="1" Width="150"/>
                    </Grid>

                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="Роль:" VerticalAlignment="Center"/>
                        <ComboBox x:Name="RoleComboBox" Grid.Column="1" Width="150"/>
                    </Grid>
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="10">
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="Отчество:" VerticalAlignment="Center"/>
                        <TextBox x:Name="MiddleNameTextBox" Grid.Column="1" Width="150"/>
                    </Grid>

                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="Почта:" VerticalAlignment="Center"/>
                        <TextBox x:Name="MailTextBox" Grid.Column="1" Width="150"/>
                    </Grid>

                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="Логин:" VerticalAlignment="Center"/>
                        <TextBox x:Name="LoginTextBox" Grid.Column="1" Width="150"/>
                    </Grid>

                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="Дата рождения:" VerticalAlignment="Center"/>
                        <DatePicker x:Name="BirthDatePicker" Grid.Column="1" Width="150"/>
                    </Grid>

                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="Позиция:" VerticalAlignment="Center"/>
                        <ComboBox x:Name="PositionComboBox" Grid.Column="1" Width="150"/>
                    </Grid>
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button x:Name="BackButton"
                    Content="Назад"
                    Click="BackButton_Click"
                    Margin="5"
                    Padding="10,5"/>
            <Button x:Name="SaveUserButton"
                    Content="Сохранить пользователя"
                    Click="SaveUserButton_Click"
                    Margin="5"
                    Padding="10,5"/>
        </StackPanel>
    </Grid>
</Page>
