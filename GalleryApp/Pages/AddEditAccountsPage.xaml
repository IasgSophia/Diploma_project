<Page x:Class="GalleryApp.Pages.AddEditAccountsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GalleryApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Добавление аккаунтов">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="10">
                <Label Content="Имя" />
                <TextBox x:Name="FirstNameTextBox" Width="200" Margin="0,5" />

                <Label Content="Отчество" />
                <TextBox x:Name="MiddleNameTextBox" Width="200" Margin="0,5" />

                <Label Content="Фамилия" />
                <TextBox x:Name="LastNameTextBox" Width="200" Margin="0,5" />

                <Label Content="Почта" />
                <TextBox x:Name="MailTextBox" Width="200" Margin="0,5" />

                <Label Content="Телефон" />
                <TextBox x:Name="PhoneTextBox" Width="200" Margin="0,5" />

                <Label Content="Логин" />
                <TextBox x:Name="LoginTextBox" Width="200" Margin="0,5" />

                <Label Content="Пароль" />
                <PasswordBox x:Name="PasswordBox" Width="200" Margin="0,5" />

                <Label Content="Дата рождения" />
                <DatePicker x:Name="BirthDatePicker" Width="200" Margin="0,5" />

                <Label Content="Роль" />
                <ComboBox x:Name="RoleComboBox" Width="200" Margin="0,5" />

                <Label Content="Позиция" />
                <ComboBox x:Name="PositionComboBox" Width="200" Margin="0,5" />
            </StackPanel>
        </ScrollViewer>

        <Button x:Name="SaveUserButton"
                Grid.Row="1"
                Content="Сохранить пользователя"
                Click="SaveUserButton_Click"
                HorizontalAlignment="Right"
                Margin="10"
                Padding="10,5"/>
        <Button x:Name="BackButton"
        Grid.Row="1"
        Content="Назад"
        Click="BackButton_Click"
        HorizontalAlignment="Left"
        Margin="10"
        Padding="10,5"/>
    </Grid>
</Page>
