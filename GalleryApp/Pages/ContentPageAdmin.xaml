<Page x:Class="GalleryApp.Pages.ContentPageAdmin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GalleryApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Товары администратор">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label x:Name="CountOfLabel"
                   Grid.Column="0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   Content="123"
                   Margin="10,0,0,0"/>

            <Label x:Name="FIOLabel"
                   Grid.Column="1"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center"
                   Content="ФИО"
                   Margin="0,0,10,0"/>
        </Grid>

        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    VerticalAlignment="Center"
                    Margin="10,0,10,0">
            <TextBox x:Name="SearchTextBox"
                     Width="100"
             Style="{StaticResource StyledTextBox}"
             TextChanged="SearchTextBox_TextChanged"/>  
            <RadioButton x:Name="SortUpRadioButton"
                         Content="По возрастанию"
                         VerticalAlignment="Center"
                         Margin="0,0,10,0"
                         Checked="SortUpRadioButton_Checked"/>

            <RadioButton x:Name="SortDownRadioButton"
                         Content="По убыванию"
                         VerticalAlignment="Center"
                         Margin="0,0,10,0"
                         Checked="SortDownRadioButton_Checked"/>

            <ComboBox x:Name="SizeTypeComboBox"
                      Width="150"
                      Margin="0,0,10,0"
                      VerticalAlignment="Center"
                      SelectionChanged="SizeTypeComboBox_SelectionChanged"
                      DisplayMemberPath="Size"/>

            <ComboBox x:Name="ExhibitionFilterComboBox"
                      Width="150"
                      VerticalAlignment="Center"
                      SelectionChanged="ExhibitionFilterComboBox_SelectionChanged"
                      DisplayMemberPath="Name"/>
        </StackPanel>

        <ListView x:Name="ProductsListView"
                  Grid.Row="2"
                  Margin="10"
                  VerticalContentAlignment="Center"
                  HorizontalContentAlignment="Center">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="150"/>
                        </Grid.ColumnDefinitions>

                        <Image Grid.Column="0"
                               Margin="10"
                               Width="130"
                               Height="100"
                               Stretch="UniformToFill">
                            <Image.Source>
                                <Binding Path="ProductPhoto">
                                    <Binding.TargetNullValue>
                                        <BitmapImage UriSource="/Resources/smallcrow.png"/>
                                    </Binding.TargetNullValue>
                                </Binding>
                            </Image.Source>
                        </Image>

                        <StackPanel Grid.Column="1"
                                    VerticalAlignment="Center"
                                    Margin="10,0">
                            <TextBlock Text="{Binding title, StringFormat='Название: {0}'}"/>
                            <TextBlock Text="{Binding author, StringFormat='Автор: {0}'}"/>
                            <TextBlock Text="{Binding size, StringFormat='Размер: {0}'}"/>
                            <TextBlock Text="{Binding price, StringFormat='Цена: {0}'}"/>
                        </StackPanel>

                        <Button Grid.Column="2"
                                Content="Редактировать"
                                Width="100"
                                Height="30"
                                Margin="10,0"
                                Click="EditButton_Click"/>

                        <Button Grid.Column="3"
                                Content="Удалить"
                                Width="100"
                                Height="30"
                                Margin="10,0"
                                Click="DeleteButton_Click"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Grid Grid.Row="3"
              Margin="10,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="BackButton"
                    Style="{StaticResource PrimaryButton}"
                    Content="Назад"
                    Grid.Column="0"
                    HorizontalAlignment="Left"
                    Click="BackButton_Click"
                    Margin="0,0,10,0"/>

            <Button x:Name="ViewOrdersButton"
                    Content="Посмотреть заказы"
                    Style="{StaticResource PrimaryButton}"
                    Grid.Column="1"
                    Margin="0,0,10,0"
                    Click="ViewOrdersButton_Click"/>

            <Button x:Name="AddUserButton"
                    Style="{StaticResource PrimaryButton}"
                    Content="Добавить пользователя"
                    Grid.Column="2"
                    Margin="0,0,10,0"
                    Click="AddUserButton_Click"/>

            <Button x:Name="AddButton"
                    Content="Добавить картину"
                    Grid.Column="3"
                    Style="{StaticResource PrimaryButton}"
                    Click="AddButton_Click"/>
        </Grid>
    </Grid>
</Page>
