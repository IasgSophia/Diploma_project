<Page x:Class="GalleryApp.Pages.ContentPageAdmin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GalleryApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="1200"
      Title="Товары - администратор">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label x:Name="CountOfLabel"
                   Grid.Column="0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   Content="123"
                   Margin="10,0,0,0"/>

            <Label x:Name="FIOLabel"
                   Grid.Column="1"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center"
                   Content="ФИО"
                   Margin="0,0,10,0"/>
        </Grid>

        <ScrollViewer Grid.Row="1"
              HorizontalScrollBarVisibility="Auto"
              VerticalScrollBarVisibility="Disabled"
              Height="70">
            <StackPanel Orientation="Horizontal"
                VerticalAlignment="Center"
                Margin="10,0,10,0"
                HorizontalAlignment="Left">
                <TextBox x:Name="SearchTextBox"
                 Width="150"
                 Margin="0,0,10,0"
                 VerticalAlignment="Center"
                 TextChanged="SearchTextBox_TextChanged"/>
                <RadioButton x:Name="SortUpRadioButton"
                     Content="Цена ↑"
                     Margin="0,0,10,0"
                     VerticalAlignment="Center"
                     Checked="SortUpRadioButton_Checked"/>
                <RadioButton x:Name="SortDownRadioButton"
                     Content="Цена ↓"
                     Margin="0,0,10,10"
                     VerticalAlignment="Center"
                     Checked="SortDownRadioButton_Checked"/>
                
                <ComboBox x:Name="LampTypeComboBox"
          Width="150"
          Margin="0,0,10,0"
          VerticalAlignment="Center"
          DisplayMemberPath="Name"
          SelectedValuePath="Id"
          SelectionChanged="LampTypeComboBox_SelectionChanged">
                    <ComboBoxItem IsEnabled="False" IsSelected="True">Тип лампы</ComboBoxItem>
                </ComboBox>

                <ComboBox x:Name="ColorTemperatureComboBox"
          Width="120"
          Margin="0,0,10,0"
          VerticalAlignment="Center"
          SelectionChanged="ColorTemperatureComboBox_SelectionChanged">
                    <ComboBoxItem IsEnabled="False" IsSelected="True">Цвет. темп.</ComboBoxItem>
                </ComboBox>

                <ComboBox x:Name="CRIComboBox"
          Width="100"
          Margin="0,0,10,0"
          VerticalAlignment="Center"
          SelectionChanged="CRIComboBox_SelectionChanged">
                    <ComboBoxItem IsEnabled="False" IsSelected="True">CRI</ComboBoxItem>
                </ComboBox>

                <ComboBox x:Name="LuminousFluxComboBox"
          Width="130"
          Margin="0,0,10,0"
          VerticalAlignment="Center"
          SelectionChanged="LuminousFluxComboBox_SelectionChanged">
                    <ComboBoxItem IsEnabled="False" IsSelected="True">Световой поток</ComboBoxItem>
                </ComboBox>

                <ComboBox x:Name="BeamAngleComboBox"
          Width="120"
          Margin="0,0,10,0"
          VerticalAlignment="Center"
          SelectionChanged="BeamAngleComboBox_SelectionChanged">
                    <ComboBoxItem IsEnabled="False" IsSelected="True">Угол</ComboBoxItem>
                </ComboBox>

                <ComboBox x:Name="VoltageComboBox"
          Width="100"
          Margin="0,0,10,0"
          VerticalAlignment="Center"
          SelectionChanged="VoltageComboBox_SelectionChanged">
                    <ComboBoxItem IsEnabled="False" IsSelected="True">Вольтаж</ComboBoxItem>
                </ComboBox>

                <ComboBox x:Name="MountingTypeComboBox"
          Width="130"
          Margin="0,0,10,0"
          VerticalAlignment="Center"
          DisplayMemberPath="Name"
          SelectedValuePath="Id"
          SelectionChanged="MountingTypeComboBox_SelectionChanged">
                    <ComboBoxItem IsEnabled="False" IsSelected="True">Крепление</ComboBoxItem>
                </ComboBox>

                <CheckBox x:Name="UVCheckBox"
                  Content="Защита УФ"
                  Margin="0,0,10,0"
                  VerticalAlignment="Center"
                  Checked="FilterCheckBox_Checked"
                  Unchecked="FilterCheckBox_Unchecked"/>

                <CheckBox x:Name="IRCheckBox"
                  Content="Защита ИК"
                  Margin="0,0,10,0"
                  VerticalAlignment="Center"
                  Checked="FilterCheckBox_Checked"
                  Unchecked="FilterCheckBox_Unchecked"/>

                <CheckBox x:Name="DimmableCheckBox"
                  Content="Диммируемый"
                  Margin="0,0,10,0"
                  VerticalAlignment="Center"
                  Checked="FilterCheckBox_Checked"
                  Unchecked="FilterCheckBox_Unchecked"/>

                <CheckBox x:Name="InStockCheckBox"
                  Content="В наличии"
                  Margin="0,0,10,0"
                  VerticalAlignment="Center"
                  Checked="FilterCheckBox_Checked"
                  Unchecked="FilterCheckBox_Unchecked"/>

            </StackPanel>
        </ScrollViewer>


        <ListView x:Name="ProductsListView"
                  Grid.Row="2"
                  Margin="10"
                  VerticalContentAlignment="Center"
                  HorizontalContentAlignment="Center">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="150"/>
                        </Grid.ColumnDefinitions>

                        <Image Grid.Column="0"
                               Margin="10"
                               Width="130"
                               Height="100"
                               Stretch="UniformToFill">
                            <Image.Source>
                                <Binding Path="ProductPhoto">
                                    <Binding.TargetNullValue>
                                        <BitmapImage UriSource="/Resources/smallcrow.png"/>
                                    </Binding.TargetNullValue>
                                </Binding>
                            </Image.Source>
                        </Image>

                        <StackPanel Grid.Column="1"
                                    VerticalAlignment="Center"
                                    Margin="10,0">
                            <TextBlock Text="{Binding title, StringFormat='Название: {0}'}"/>
                            <TextBlock Text="{Binding author, StringFormat='Автор: {0}'}"/>
                            <TextBlock Text="{Binding size, StringFormat='Размер: {0}'}"/>
                            <TextBlock Text="{Binding price, StringFormat='Цена: {0}'}"/>
                        </StackPanel>

                        <Button Grid.Column="2"
                                Content="Редактировать"
                                Margin="10,0"
                                Click="EditButton_Click"/>

                        <Button Grid.Column="3"
                                Content="Удалить"
                                Margin="10,0"
                                Click="DeleteButton_Click"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Grid Grid.Row="3"
              Margin="10,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="BackButton"
                    Content="Назад"
                    Grid.Column="0"
                    HorizontalAlignment="Left"
                    Click="BackButton_Click"
                    Margin="0,0,10,0"/>

            <Button x:Name="ViewOrdersButton"
                    Content="Посмотреть заказы"
                    Grid.Column="1"
                    Margin="0,0,10,0"
                    Click="ViewOrdersButton_Click"/>

            <Button x:Name="AddUserButton"
                    Content="Добавить пользователя"
                    Grid.Column="2"
                    Margin="0,0,10,0"
                    Click="AddUserButton_Click"/>

            <Button x:Name="AddButton"
                    Content="Добавить картину"
                    Grid.Column="3"
                    Click="AddButton_Click"/>
        </Grid>
    </Grid>
</Page>
