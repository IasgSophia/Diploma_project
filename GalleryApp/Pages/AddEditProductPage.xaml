<Page x:Class="GalleryApp.Pages.AddEditProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Добавление/Редактирование лампы">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="300"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Id -->
                <Label Content="Id:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" />
                <TextBox x:Name="IdTextBox" Grid.Row="0" Grid.Column="1" IsReadOnly="True" IsEnabled="False" Margin="5" />

                <!-- ModelName -->
                <Label Content="Модель:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" />
                <TextBox x:Name="ModelNameTextBox" Grid.Row="1" Grid.Column="1" Margin="5" />

                <!-- Manufacturer -->
                <Label Content="Производитель:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" />
                <TextBox x:Name="ManufacturerTextBox" Grid.Row="2" Grid.Column="1" Margin="5" />

                <!-- LampType -->
                <Label Content="Тип лампы:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" />
                <ComboBox x:Name="LampTypeComboBox" Grid.Row="3" Grid.Column="1" DisplayMemberPath="Name" SelectedValuePath="Id" Margin="5" />

                <!-- PowerWatts -->
                <Label Content="Мощность (Вт):" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" />
                <TextBox x:Name="PowerWattsTextBox" Grid.Row="4" Grid.Column="1" Margin="5" />

                <!-- ColorTemperature -->
                <Label Content="Цветовая температура (К):" Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" />
                <TextBox x:Name="ColorTemperatureTextBox" Grid.Row="5" Grid.Column="1" Margin="5" />

                <!-- CRI -->
                <Label Content="Индекс цветопередачи (CRI):" Grid.Row="6" Grid.Column="0" VerticalAlignment="Center" />
                <TextBox x:Name="CRITextBox" Grid.Row="6" Grid.Column="1" Margin="5" />

                <!-- LuminousFlux -->
                <Label Content="Световой поток (лм):" Grid.Row="7" Grid.Column="0" VerticalAlignment="Center" />
                <TextBox x:Name="LuminousFluxTextBox" Grid.Row="7" Grid.Column="1" Margin="5" />

                <!-- BeamAngle -->
                <Label Content="Угол луча (°):" Grid.Row="8" Grid.Column="0" VerticalAlignment="Center" />
                <TextBox x:Name="BeamAngleTextBox" Grid.Row="8" Grid.Column="1" Margin="5" />

                <!-- HasUVProtection -->
                <Label Content="Защита от UV:" Grid.Row="9" Grid.Column="0" VerticalAlignment="Center" />
                <CheckBox x:Name="HasUVProtectionCheckBox" Grid.Row="9" Grid.Column="1" Margin="5" />

                <!-- HasIRProtection -->
                <Label Content="Защита от IR:" Grid.Row="10" Grid.Column="0" VerticalAlignment="Center" />
                <CheckBox x:Name="HasIRProtectionCheckBox" Grid.Row="10" Grid.Column="1" Margin="5" />

                <!-- Dimmable -->
                <Label Content="Диммируемая:" Grid.Row="11" Grid.Column="0" VerticalAlignment="Center" />
                <CheckBox x:Name="DimmableCheckBox" Grid.Row="11" Grid.Column="1" Margin="5" />

                <!-- MountingType -->
                <Label Content="Тип монтажа:" Grid.Row="12" Grid.Column="0" VerticalAlignment="Center" />
                <ComboBox x:Name="MountingTypeComboBox" Grid.Row="12" Grid.Column="1" DisplayMemberPath="Name" SelectedValuePath="Id" Margin="5" />

                <!-- Voltage -->
                <Label Content="Напряжение (В):" Grid.Row="13" Grid.Column="0" VerticalAlignment="Center" />
                <TextBox x:Name="VoltageTextBox" Grid.Row="13" Grid.Column="1" Margin="5" />

                <!-- Price -->
                <Label Content="Цена:" Grid.Row="14" Grid.Column="0" VerticalAlignment="Center" />
                <TextBox x:Name="PriceTextBox" Grid.Row="14" Grid.Column="1" Margin="5" />

                <!-- StockQuantity -->
                <Label Content="Количество на складе:" Grid.Row="15" Grid.Column="0" VerticalAlignment="Center" />
                <TextBox x:Name="StockQuantityTextBox" Grid.Row="15" Grid.Column="1" Margin="5" />

                <!-- Description -->
                <Label Content="Описание:" Grid.Row="16" Grid.Column="0" VerticalAlignment="Top" Margin="0,5,0,0" />
                <TextBox x:Name="DescriptionTextBox" Grid.Row="16" Grid.Column="1" Grid.ColumnSpan="3"
                         Height="100" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Margin="5" />

                <!-- PhotoName -->
                <Label Content="Имя файла изображения:" Grid.Row="17" Grid.Column="0" VerticalAlignment="Center" />
                <TextBox x:Name="PhotoNameTextBox" Grid.Row="17" Grid.Column="1" Margin="5" IsReadOnly="True" />

                <!-- ProductPhoto -->
                <Label Content="Изображение:" Grid.Row="18" Grid.Column="0" VerticalAlignment="Top" Margin="0,5,0,0" />
                <Border Grid.Row="18" Grid.Column="1" Width="200" Height="200" BorderBrush="Gray" BorderThickness="1" Margin="5">
                    <Image x:Name="ProductPhotoImage" Stretch="Uniform" MouseDown="ProductPhotoImage_MouseDown" Cursor="Hand" />
                </Border>
            </Grid>
        </ScrollViewer>

        <!-- Кнопки -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0" >
            <Button x:Name="BackButton" Content="Назад" Width="100" Click="BackButton_Click" Margin="5,0,5,0"/>
            <Button x:Name="SaveButton" Content="Сохранить" Width="100" Click="SaveButton_Click" Margin="5,0,0,0"/>
        </StackPanel>
    </Grid>
</Page>
