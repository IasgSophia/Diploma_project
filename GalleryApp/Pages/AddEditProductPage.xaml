<Page x:Class="GalleryApp.Pages.AddEditProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Редактирование/добавление товаров">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="250"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" Content="Название модели:" VerticalAlignment="Center" Margin="5"/>
                    <TextBox Grid.Row="0" Grid.Column="1" x:Name="ModelNameTextBox" Margin="5"/>

                    <Label Grid.Row="1" Grid.Column="0" Content="Производитель:" VerticalAlignment="Center" Margin="5"/>
                    <ComboBox Grid.Row="1" Grid.Column="1" x:Name="ManufacturerComboBox" DisplayMemberPath="Name" SelectedValuePath="Id" Margin="5"/>

                    <Label Grid.Row="2" Grid.Column="0" Content="Тип лампы:" VerticalAlignment="Center" Margin="5"/>
                    <ComboBox Grid.Row="2" Grid.Column="1" x:Name="LampTypeComboBox" DisplayMemberPath="Name" SelectedValuePath="Id" Margin="5"/>

                    <Label Grid.Row="3" Grid.Column="0" Content="Сила (W):" VerticalAlignment="Center" Margin="5"/>
                    <TextBox Grid.Row="3" Grid.Column="1" x:Name="PowerTextBox" Margin="5"/>

                    <Label Grid.Row="4" Grid.Column="0" Content="Цветовая температура (K):" VerticalAlignment="Center" Margin="5"/>
                    <TextBox Grid.Row="4" Grid.Column="1" x:Name="ColorTempTextBox" Margin="5"/>

                    <Label Grid.Row="5" Grid.Column="0" Content="CRI:" VerticalAlignment="Center" Margin="5"/>
                    <TextBox Grid.Row="5" Grid.Column="1" x:Name="CRITextBox" Margin="5"/>

                    <Label Grid.Row="6" Grid.Column="0" Content="Световой поток (lm):" VerticalAlignment="Center" Margin="5"/>
                    <TextBox Grid.Row="6" Grid.Column="1" x:Name="LumenTextBox" Margin="5"/>

                    <Label Grid.Row="7" Grid.Column="0" Content="Угол луча (°):" VerticalAlignment="Center" Margin="5"/>
                    <TextBox Grid.Row="7" Grid.Column="1" x:Name="BeamAngleTextBox" Margin="5"/>

                    <Label Grid.Row="0" Grid.Column="2" Content="UV Защита:" VerticalAlignment="Center" Margin="5"/>
                    <CheckBox Grid.Row="0" Grid.Column="3" x:Name="UVCheckBox" Margin="5" VerticalAlignment="Center"/>

                    <Label Grid.Row="1" Grid.Column="2" Content="IR Защита:" VerticalAlignment="Center" Margin="5"/>
                    <CheckBox Grid.Row="1" Grid.Column="3" x:Name="IRCheckBox" Margin="5" VerticalAlignment="Center"/>

                    <Label Grid.Row="2" Grid.Column="2" Content="Затемняемость:" VerticalAlignment="Center" Margin="5"/>
                    <CheckBox Grid.Row="2" Grid.Column="3" x:Name="DimmableCheckBox" Margin="5" VerticalAlignment="Center"/>

                    <Label Grid.Row="3" Grid.Column="2" Content="Тип монтажа:" VerticalAlignment="Center" Margin="5"/>
                    <ComboBox Grid.Row="3" Grid.Column="3" x:Name="MountingTypeComboBox" DisplayMemberPath="Name" SelectedValuePath="Id" Margin="5"/>

                    <Label Grid.Row="4" Grid.Column="2" Content="Напряжение (V):" VerticalAlignment="Center" Margin="5"/>
                    <TextBox Grid.Row="4" Grid.Column="3" x:Name="VoltageTextBox" Margin="5"/>

                    <Label Grid.Row="5" Grid.Column="2" Content="Цена:" VerticalAlignment="Center" Margin="5"/>
                    <TextBox Grid.Row="5" Grid.Column="3" x:Name="PriceTextBox" Margin="5"/>

                    <Label Grid.Row="6" Grid.Column="2" Content="Количество:" VerticalAlignment="Center" Margin="5"/>
                    <TextBox Grid.Row="6" Grid.Column="3" x:Name="QuantityTextBox" Margin="5"/>
                </Grid>

                <StackPanel Margin="10" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
                    <StackPanel Width="400">
                        <Label Content="Описание:"/>
                        <TextBox x:Name="DescriptionTextBox" Height="100" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
                    </StackPanel>

                    <StackPanel Margin="20,0,0,0">
                        <Label Content="Изображение товара:"/>
                        <Border Width="200" Height="200" BorderBrush="Gray" BorderThickness="1" Margin="0,5,0,0">
                            <Image x:Name="PhotoImage" Stretch="Uniform" MouseDown="PhotoImage_MouseDown" Cursor="Hand"/>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button x:Name="BackButton" Content="Назад" Click="BackButton_Click" Margin="5"/>
            <Button x:Name="SaveButton" Content="Сохранить" Click="SaveButton_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Page>
