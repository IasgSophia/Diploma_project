<Page x:Class="GalleryApp.Pages.AddEditProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GalleryApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="1000"
      Title="Добавление/Редактирование картины">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- ID -->
            <Label x:Name="IdLabel" Content="Id:" Grid.Row="0" Grid.Column="0"/>
            <TextBox x:Name="IdTextBox" Grid.Row="0" Grid.Column="1"
                     IsEnabled="False" IsReadOnly="True"/>

            <!-- Основные поля -->
            <Label Content="Название:" Grid.Row="1" Grid.Column="0"/>
            <TextBox x:Name="TitleTextBox" Grid.Row="1" Grid.Column="1"/>

            <Label Content="Автор:" Grid.Row="2" Grid.Column="0"/>
            <TextBox x:Name="AuthorTextBox" Grid.Row="2" Grid.Column="1"/>

            <Label Content="Жанр:" Grid.Row="3" Grid.Column="0"/>
            <TextBox x:Name="GenreTextBox" Grid.Row="3" Grid.Column="1"/>

            <Label Content="Размер:" Grid.Row="1" Grid.Column="2"/>
            <TextBox x:Name="SizeTextBox" Grid.Row="1" Grid.Column="3"/>

            <Label Content="Тип размера:" Grid.Row="2" Grid.Column="2"/>
            <ComboBox x:Name="SizeTypeComboBox" Grid.Row="2" Grid.Column="3"/>

            <Label Content="Цена:" Grid.Row="3" Grid.Column="2"/>
            <TextBox x:Name="PriceTextBox" Grid.Row="3" Grid.Column="3"/>

            <Label Content="Выставка:" Grid.Row="0" Grid.Column="2"/>
            <TextBox x:Name="ExibitionTextBox" Grid.Row="0" Grid.Column="3"/>

            <Label Content="Описание:" Grid.Row="4" Grid.Column="0"/>
            <TextBox x:Name="DescriptionTextBox" Grid.Row="4" Grid.Column="1"
                     Grid.ColumnSpan="3" Height="Auto" VerticalScrollBarVisibility="Visible"
                     TextWrapping="Wrap" AcceptsReturn="True"/>

            <!-- Изображение -->
            <Label Content="Изображение:" Grid.Row="5" Grid.Column="0"/>
            <Image x:Name="PhotoImage" Grid.Row="5" Grid.Column="1"
                   Margin="10" MouseDown="PhotoImage_MouseDown">
                <Image.Source>
                    <Binding Path="ProductPhoto">
                        <Binding.TargetNullValue>
                            <BitmapImage UriSource="/Resources/smallcrow.png"></BitmapImage>
                        </Binding.TargetNullValue>
                    </Binding>
                </Image.Source>
            </Image>
        </Grid>

        <!-- Кнопки -->
        <Button x:Name="BackButton"
                Click="BackButton_Click"
                Content="Назад"
                Grid.Row="1" HorizontalAlignment="Left"/>

        <Button x:Name="SaveButton"
                Click="SaveButton_Click"
                Content="Сохранить"  
                Grid.Row="1" HorizontalAlignment="Right"/>
    </Grid>
</Page>
