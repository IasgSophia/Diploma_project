<Page x:Class="GalleryApp.Pages.ContentPageManager"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GalleryApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="1350"
      Title="Товары менеджер">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label x:Name="CountOfLabel"
       Grid.Column="0"
       HorizontalAlignment="Left"
       VerticalAlignment="Center"/>

            <Label x:Name="FIOLabel"
       Grid.Column="1"
       HorizontalAlignment="Right"
       VerticalAlignment="Center"/>
        </Grid>

        <ScrollViewer Grid.Row="1" Margin="10,5" VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Auto">
            <WrapPanel Orientation="Horizontal"
   ItemHeight="70"
   MinWidth="1350"
   VerticalAlignment="Top">

                <TextBox x:Name="SearchTextBox"
             Width="150"
             Margin="0,0,10,10"
             VerticalAlignment="Center"
             TextChanged="SearchTextBox_TextChanged"/>

                <RadioButton x:Name="SortUpRadioButton"
                 Content="Цена ↑"
                 Margin="0,0,10,10"
                 VerticalAlignment="Center"
                 Checked="SortUpRadioButton_Checked"/>

                <RadioButton x:Name="SortDownRadioButton"
                 Content="Цена ↓"
                 Margin="0,0,10,10"
                 VerticalAlignment="Center"
                 Checked="SortDownRadioButton_Checked"/>

                <ComboBox x:Name="LampTypeComboBox"
              Width="150"
              Margin="0,0,10,10"
              DisplayMemberPath="Name"
              SelectedItem="Тип лампы (заглушка)"
              SelectionChanged="LampTypeComboBox_SelectionChanged"/>


                <ComboBox x:Name="MountingTypeComboBox"
              Width="130"
              Margin="0,0,10,10"
              DisplayMemberPath="Name"
              SelectionChanged="MountingTypeComboBox_SelectionChanged"/>

                <ComboBox x:Name="ManufacturerComboBox"
              Width="150"
              Margin="0,0,10,10"
              DisplayMemberPath="Name"
              SelectionChanged="ManufacturerComboBox_SelectionChanged"/>

                <CheckBox x:Name="UVCheckBox"
              Content="Защита УФ"
              Margin="0,0,10,10"
              Checked="UVCheckBox_Checked"
              Unchecked="UVCheckBox_Unchecked"/>

                <CheckBox x:Name="IRCheckBox"
              Content="Защита ИК"
              Margin="0,0,10,10"
              Checked="IRCheckBox_Checked"
              Unchecked="IRCheckBox_Unchecked"/>

                <CheckBox x:Name="DimmableCheckBox"
              Content="Диммируемый"
              Margin="0,0,10,10"
              Checked="DimmableCheckBox_Checked"
              Unchecked="DimmableCheckBox_Unchecked"/>
            </WrapPanel>
        </ScrollViewer>

        <ListView x:Name="ProductListView"
      Grid.Row="2"
      Margin="10"
      VerticalContentAlignment="Center"
      HorizontalContentAlignment="Center"
      ItemsSource="{Binding Products}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="150"/>
                        </Grid.ColumnDefinitions>

                        <Image Grid.Column="0"
                   Margin="10"
                   Width="130"
                   Height="100"
                   Stretch="UniformToFill">
                            <Image.Source>
                                <Binding Path="ProductPhoto">
                                    <Binding.TargetNullValue>
                                        <BitmapImage UriSource="/Resources/smallcrow.png"/>
                                    </Binding.TargetNullValue>
                                </Binding>
                            </Image.Source>
                        </Image>

                        <StackPanel Grid.Column="1"
                        VerticalAlignment="Center"
                        Margin="10,0">
                            <TextBlock Text="{Binding ModelName, StringFormat='Название: {0}'}"/>
                            <TextBlock Text="{Binding Manufacturer.Name, StringFormat='Производитель: {0}'}"/>
                            <TextBlock Text="{Binding LampType.Name, StringFormat='Тип лампы: {0}'}"/>
                            <TextBlock Text="{Binding PowerWatts, StringFormat='Мощность: {0} Вт'}"/>
                            <TextBlock Text="{Binding ColorTemperature, StringFormat='Цветовая температура: {0} K'}"/>
                            <TextBlock Text="{Binding CRI, StringFormat='Индекс цветопередачи (CRI): {0}'}"/>
                            <TextBlock Text="{Binding LuminousFlux, StringFormat='Световой поток: {0} лм'}"/>
                            <TextBlock Text="{Binding BeamAngle, StringFormat='Угол рассеивания: {0}°'}"/>
                            <TextBlock Text="{Binding HasUVProtection,  StringFormat='Защита УФ: {0}'}"/>
                            <TextBlock Text="{Binding HasIRProtection,  StringFormat='Защита ИК: {0}'}"/>
                            <TextBlock Text="{Binding Dimmable,  StringFormat='Диммируемый: {0}'}"/>
                            <TextBlock Text="{Binding MountingType.Name, StringFormat='Тип крепления: {0}'}"/>
                            <TextBlock Text="{Binding Voltage, StringFormat='Напряжение: {0} В'}"/>
                            <TextBlock Text="{Binding Price, StringFormat='Цена: {0} ₽'}"/>
                            <TextBlock Text="{Binding StockQuantity, StringFormat='В наличии: {0} шт.'}"/>
                            <TextBlock Text="{Binding Description, StringFormat='Описание: {0}'}" TextWrapping="Wrap"/>
                        </StackPanel>

                        <Button Grid.Column="2"
                    Content="Редактировать"
                    Margin="10,0"
                    Click="EditButton_Click"/>

                        <Button Grid.Column="3"
                    Content="Удалить"
                    Margin="10,0"
                    Click="DeleteButton_Click"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>


        <Grid Grid.Row="3" Margin="10,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="BackButton"
                Content="Назад"
                Grid.Column="0"
                HorizontalAlignment="Left"
                Click="BackButton_Click"
                Margin="0,0,10,0"/>

            <Button x:Name="ViewOrdersButton"
                Content="Посмотреть заказы"
                Grid.Column="1"
                Margin="0,0,10,0"
                Click="ViewOrdersButton_Click"/>


            <Button x:Name="AddButton"
                Content="Добавить продукт"
                Grid.Column="3"
                Click="AddButton_Click"/>
        </Grid>
    </Grid>
</Page>
